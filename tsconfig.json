{
  "compilerOptions": {
    "lib": ["ESNext"],
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "node",
    "noEmit": false,
    "strict": true,
    "downlevelIteration": true,
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "declaration": true,
    "declarationDir": "./dist", // Generar archivos .d.ts aqu√≠
    "outDir": "./dist",
    "types": [
      "bun-types" // add Bun global
    ]
  },
  "include": ["./src/**/*", "./src/services/authorization.ts"],
  "exclude": ["node_modules", "test"]
}
